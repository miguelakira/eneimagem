<?php
class EventsController extends AppController {

	var $name = 'Events';
	var $helpers = array('Html', 'Form');
	var $layout = 'cms';
	

	function index() {
		$this->Event->recursive = 0;
		$this->set('events', $this->paginate());
	}

	// visao do adm
	function view($id = null) {
		
		if (!$id) {
			$this->flash(__('Invalid Event', true), array('action'=>'index'));
		}
		$this->set('event', $this->Event->read(null, $id));
	}
	
	// index do usuario
	function user_index() {
		$this->layout = "default";
		$this->set('events', $this->Event->find('all', array('order' => array('Event.Created DESC'))));
	}
	
	// visao do usuario
	function user_view($id = null){
		$this->layout = "default";
		if (!$id) {
			$this->flash(__('Invalid Event', true), array('action'=>'index'));
		}
		$this->set('event', $this->Event->read(null, $id));
	}

	function add() {
		if (!empty($this->data)) {
			$this->Event->create();
			if ($this->Event->save($this->data)) {
				$this->Session->setFlash('Evento foi salvo.');
				$this->redirect(array('action'=>'index'));
			} else {
			}
		}
	}

	function edit($id = null) {
		if (!$id && empty($this->data)) {
			$this->flash(__('Invalid Event', true), array('action'=>'index'));
		}
		if (!empty($this->data)) {
			if ($this->Event->save($this->data)) {
				$this->flash(__('The Event has been saved.', true), array('action'=>'index'));
			} else {
			}
		}
		if (empty($this->data)) {
			$this->data = $this->Event->read(null, $id);
		}
	}

	function delete($id = null) {
		if ($this->Event->delete($id)) {
			$this->Session->setFlash('O evento com a id "' . $id . ' " foi deletado.');
			$this->redirect(array('action' => 'index'));
	}
	}
	
	function last_posted() {
	        return $this->Event->find('all', array('order' => 'Event.created DESC', 'limit' => 3));
	}
}
?>